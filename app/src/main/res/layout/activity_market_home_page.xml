<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGreenBackground"
    android:orientation="vertical"
    tools:context="com.enjoygreenlife.guanguanbao.controller.market.MarketHomePageActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70sp"
        android:background="@color/colorGreen"
        android:paddingLeft="15sp"
        android:paddingRight="15sp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/icon_personal_pic"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/ic_user" />

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_toRightOf="@id/icon_personal_pic"
                android:paddingTop="4sp"
                android:text="@string/user_name"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/user_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/icon_personal_pic"
                android:layout_marginLeft="10sp"
                android:layout_toRightOf="@id/icon_personal_pic"
                android:paddingBottom="4sp"
                android:text="@string/user_phone" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/user_medal_img"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/img_gold_medal" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:orientation="vertical"
            android:padding="20sp">

            <ImageView
                android:id="@+id/img_market_cash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/img_coins" />

            <TextView
                android:id="@+id/market_title_cash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:text="@string/market_title_cash"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:orientation="vertical"
            android:padding="20sp">

            <ImageView
                android:id="@+id/img_market_draw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/img_drawer" />

            <TextView
                android:id="@+id/market_title_drawer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:text="@string/market_title_drawer"
                android:textAlignment="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:orientation="vertical"
            android:padding="20sp">

            <ImageView
                android:id="@+id/img_market_lottery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/img_lottery" />

            <TextView
                android:id="@+id/market_title_lottery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:text="@string/market_title_lottery"
                android:textAlignment="center" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
