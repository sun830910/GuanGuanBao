<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.enjoygreenlife.guanguanbao.view.SettingsMenuActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorGreen"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70sp"
        android:background="@color/colorGreen"
        android:paddingLeft="15sp"
        android:paddingRight="15sp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/icon_personal_pic"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/ic_user" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="20sp"
                android:layout_height="20sp"
                app:srcCompat="@drawable/img_gold_medal"
                android:layout_alignBottom="@id/icon_personal_pic"
                android:layout_alignRight="@id/icon_personal_pic"/>

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/icon_personal_pic"
                android:paddingTop="4sp"
                android:layout_marginLeft="10sp"
                android:text="@string/user_name" />

            <TextView
                android:id="@+id/user_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/icon_personal_pic"
                android:layout_toRightOf="@id/icon_personal_pic"
                android:paddingBottom="4sp"
                android:layout_marginLeft="10sp"
                android:text="@string/user_phone" />

        </RelativeLayout>

    </RelativeLayout>

    <ListView
        android:id="@+id/setting_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>
